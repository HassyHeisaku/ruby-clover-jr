<script type="text/javascript">
/* tag cloud js */
    window.addEventListener("DOMContentLoaded",function(){tag_place=document.getElementById("tagcloud");for(tag in tag_map)current_tag[tag]=!0,Array.prototype.push.apply(all_ids,tag_map[tag]);all_ids=all_ids.sort().filter(function(b,a,c){return c.indexOf(b)===a});calc_tag_weight();add_tagcloud(current_tag)});var current_tag={},all_ids=[],visible_ids=[],tag_place,tag_weight={};
function calc_tag_weight(){var b=Math.max.apply(null,Object.values(tag_map).map(function(a){return a.length}));for(t in tag_map)tag_weight[t]="tag"+Math.floor(10*tag_map[t].length/b).toString()}function add_tagcloud(b){for(tag in b){var a=document.createElement("li");a.textContent=tag;a.className=tag_weight[tag];a.onclick=function(){filter_it(this)};a.style.cursor="pointer";a.style.color=b[tag]?"blue":"#aaaaaa";tag_place.appendChild(a)}}
function lists_to_list(b){return Array.prototype.concat.apply([],b).sort().filter(function(a,c,d){return d.indexOf(a)===c})}
function filter_it(b){tag=b.textContent;current_tag[tag]=!current_tag[tag];visible_ids=1==current_tag[tag]?visible_ids.concat(tag_map[tag]).sort().filter(function(a,c,d){return d.indexOf(a)===c}):visible_ids.filter(function(a){return-1==tag_map[tag].indexOf(a)});for(tag in tag_map)current_tag[tag]=!1;for(tag in tag_map)for(b=0;b<visible_ids.length;b++)if(-1!=tag_map[tag].indexOf(visible_ids[b])){current_tag[tag]=!0;break}tag_place.textContent=null;add_tagcloud(current_tag);all_ids.forEach(function(a,
        c){document.getElementById(a).style.display="none"});visible_ids.forEach(function(a,c){document.getElementById(a).style.display="block"})};
window.addEventListener("DOMContentLoaded",function(){for(var a=document.getElementsByClassName("desc"),b=0;b<a.length;b++)e=a.item(b),e.style.display="none";a=document.getElementsByClassName("title");for(b=0;b<a.length;b++)e=a.item(b),e.onclick=function(){toggle_it(this)}});function toggle_it(a){target=a.nextElementSibling;target.style.display="none"==target.style.display?"block":"none"};
</script>
<ul id="tagcloud" class="tagcloud"></ul>
<main class="main-list">
<div class="article-list" id="article-list" >
    <%  @contents.each do |content| %>
        <div class="article" id="<%= content[:id] %>" >
            <time class="date" datetime="<%= content[:date].strftime('%Y-%m-%d') %>"><%= content[:date].strftime('%Y-%m-%d') %></time>
            <h1 class="title"><%= content[:title] %></h1>
            <div class="desc"><%= content[:contents] %></div>
        </div>
    <% end %>
</div>
</main>
